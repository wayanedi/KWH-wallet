<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="#414141">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewBottomTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/kwh"
                    android:textColor="@color/colorWhite"
                    android:textSize="40sp"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/kwh_wallet_logo"
                    android:scaleX="0.9"
                    android:scaleY="0.9"/>

                <TextView
                    android:id="@+id/LoginTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="@string/login"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="24dp"
                    android:hint="@string/email"
                    android:inputType="textAutoCorrect"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorWhite"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="24dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorWhite" />

                <LinearLayout
                    android:id="@+id/container"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password">

                    <TextView
                        android:id="@+id/signuptext"
                        android:text="@string/belum_punya_akun_daftar"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/HyperlinkDaftar"
                        android:text="@string/disini"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorHyperlink"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="5dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <Button
                    android:id="@+id/dbmhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="LOGIN"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/button"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/copyrightProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="&#169;KWH"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:backgroundTint="@color/colorOrange"/>

                <TextView
                    android:id="@+id/copyrightLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Kukuh Wayan Handi"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp"
                    app:backgroundTint="@color/colorOrange"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>