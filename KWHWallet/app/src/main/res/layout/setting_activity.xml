<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgApp">

    <RelativeLayout
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/back"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTING"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="24dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_toRightOf="@+id/backBtn"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbars"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/akunPanel"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/akunTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:textSize="18dp"
                android:textColor="@color/colorOrangeDark"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/editProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bottom_border"
                android:layout_below="@id/akunTitle"
                android:text="Edit Profil"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="left">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/keamananPanel"
            android:layout_below="@id/akunPanel">

            <TextView
                android:id="@+id/keamananTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keamananan"
                android:textSize="18dp"
                android:textColor="@color/colorOrangeDark"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/ubahPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/keamananTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bottom_border"
                android:fontFamily="@font/montserrat"
                android:gravity="left"
                android:text="Ubah Password"
                android:textAllCaps="false"
                android:textSize="16dp">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tentangPanel"
            android:layout_below="@id/keamananPanel">

            <TextView
                android:id="@+id/tentangTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang"
                android:textSize="18dp"
                android:textColor="@color/colorOrangeDark"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/tentangKWH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bottom_border"
                android:layout_below="@id/tentangTitle"
                android:text="Tentang KWH"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="left">

            </Button>

            <Button
                android:id="@+id/kebijakanPrivasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bottom_border"
                android:layout_below="@id/tentangKWH"
                android:text="Kebijakan Privasi"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="left">

            </Button>

            <Button
                android:id="@+id/pusatBantuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bottom_border"
                android:layout_below="@id/kebijakanPrivasi"
                android:text="Pusat Bantuan"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="left">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logoutPanel"
            android:layout_below="@id/tentangPanel">

            <TextView
                android:id="@+id/logoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGOUT"
                android:textSize="18dp"
                android:textColor="@color/colorOrangeDark"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logoutTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_bottom_border"
                android:fontFamily="@font/montserrat"
                android:gravity="left"
                android:text="Logout"
                android:textAllCaps="false"
                android:textSize="16dp">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tentangPanel">

            <TextView
                android:id="@+id/copyrightProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="&#169;KWH"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorOrangeDark"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                android:layout_alignParentBottom="true"
                android:padding="10dp"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>